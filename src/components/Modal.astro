---
// Declaramos una variable de estado para mostrar u ocultar el modal
let isOpen = false;

// Función para cerrar el modal
function closeModal() {
  isOpen = false;
}

// Función para abrir el modal
function openModal() {
  isOpen = true;
}
---

<div>
  <!-- Botón para abrir el modal -->
  <div
    class="w-full flex items-center justify-between mt-6 py-1 px-4 uppercase bg-green-500 rounded-sm cursor-pointer"
    on:click={openModal}
  >
    <h3 class="text-white text-lg font-semibold">Adquiere el curso</h3>
    <div class="w-[40%] flex items-center text-gray-700 text-4xl gap-0">
      <hr class="w-full border border-gray-700 relative -right-3" />
      <ion-icon name="chevron-forward"></ion-icon>
    </div>
  </div>

  <!-- Modal -->
  {isOpen && (
    <div class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
      <div class="bg-white p-6 rounded-lg w-1/3">
        <h2 class="text-2xl font-bold mb-4">Regístrate para el curso</h2>

        <form>
          <label class="block mb-2">Nombre</label>
          <input type="text" class="w-full p-2 border rounded mb-4" />

          <label class="block mb-2">Correo Electrónico</label>
          <input type="email" class="w-full p-2 border rounded mb-4" />

          <label class="block mb-2">Teléfono</label>
          <input type="text" class="w-full p-2 border rounded mb-4" />

          <button type="submit" class="w-full bg-green-500 text-white py-2 rounded">
            Enviar
          </button>
        </form>

        <button class="mt-4 w-full bg-gray-500 text-white py-2 rounded" on:click={closeModal}>
          Cerrar
        </button>
      </div>
    </div>
  )}
</div>
